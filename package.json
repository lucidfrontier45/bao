{
	"name": "@lucidfrontier45/bao",
	"description": "A small tool to fix shebang of scripts added by `bun add -g`",
	"version": "0.0.2",
	"author": {
		"name": "Du Shiqiao",
		"email": "lucidfrontier.45@gmail.com"
	},
	"license": "MIT",
	"publishConfig": {
		"access": "public"
	},
	"module": "src/index.ts",
	"type": "module",
	"dependencies": {
		"clerc": "^1.2.1"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.14",
		"@types/bun": "^1.3.8",
		"@typescript/native-preview": "^7.0.0-dev.20260209.1",
		"typescript": "^5.9.3"
	},
	"bin": {
		"bao": "./bin/main.ts"
	},
	"scripts": {
		"sync": "bun i --frozen-lockfile",
		"dev": "bun --watch run.ts",
		"test": "bun test",
		"check": "biome check --write bin/ src/ && bun run typecheck",
		"format": "biome format --write bin/ src/ tests/",
		"typecheck": "tsgo --noEmit",
		"build": "bun build run.ts --outdir ./dist"
	},
	"files": [
		"bin",
		"src",
		"LICENSE",
		"README.md",
		"logo.png",
		"package.json",
		"bun.lock"
	]
}